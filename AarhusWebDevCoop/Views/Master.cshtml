@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="@Umbraco.Field("metaDescription")" />
    <meta name="keywords" content="@Umbraco.Field("metaKeywords")" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Content.Name - Aarhus Web Developer Cooperation</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    
    <!-- Main Navigation -->
    <nav class="navbar navbar-dark nav-pills nav-fill navbar-expand-lg bg-dark text-light">
        @Umbraco.RenderMacro("mainMenu")
    </nav>
    
    <!-- Main Content -->
    <main>
        <!-- The Header -->
        @Umbraco.RenderMacro("header")
        
        <!-- The Content -->
        @RenderBody()
    </main>
    
    <!-- Main Footer -->
    <footer class="main-footer container-fluid bg-dark text-light text-center p-3">
        @Umbraco.Field("footerText", recursive: true)
    </footer>
    
    <!-- Script File References -->
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/popper.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
</body>
</html>