@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{ Layout = "Master.cshtml"; }

<article class="my-4">
    
    <!-- Description of Website -->
    <section>
        <h2>@Umbraco.Field("homeTitle")</h2>
        <div class="container-fluid mx-0 px-0 my-4">@Umbraco.Field("homeContent")</div>
    </section>
    
    <!-- List of Newest Completed Projects -->
    <section>
        <h2 class="my-4">Newest Completed Projects</h2>
        @Umbraco.RenderMacro("newestCompletedProjects", new {numOfProjects="2"})
    </section>

    <!-- List of Newest Articles -->
    <section>
        <h2 class="my-4">Newest Articles</h2>
        @Umbraco.RenderMacro("newestArticles", new {numOfArticles="3"})
    </section>
</article>